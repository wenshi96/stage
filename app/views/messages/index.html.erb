<div>
  <div>
    <h1>
      My conversations
    </h1>
  </div>
</div>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Contact
        </th>

        <th>
          Lastest message
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>
        <th></th>
      </tr>
      <% @contact_users_id.each_with_index do |a_contact, n| %>

        <% @list_of_messages.each_with_index do |a_message, count| %>
          <% if [a_message.sender_id, a_message.receiver_id].include? a_contact %>
          
        <tr>
          <td>
            <%= n+1 %>
          </td>

          <td>
            <%= User.where({:id=>a_contact}).first.username%>
          </td>

          <td>
            <%= a_message.content %>
          </td>

          <td>
            <%= time_ago_in_words(a_message.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_message.updated_at) %> ago
          </td>
          <td>
            <a href="\messages\<%=a_contact%>">
              Check out chat history
            </a>
          </td>
        </tr>
      <% end %>
      <% end %>
      <% end %>

    </table>

    <hr>
  </div>
</div>
<hr>
