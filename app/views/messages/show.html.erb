<div>
  <div>
    <h1>
      Chat history with <%= @the_user.username%>
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Reply to your future band member, <%= @the_user.username%>
    </h2>

    <form action="/insert_message" method="post">
      <div>
        <input type="hidden" id="receiver_id_box" name="query_receiver_id" value="<%= @the_user.id%>">
      </div>

      <div>
        <label for="content_box">
          Content
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

      <button>
        Send message!
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Sender
        </th>

        <th>
          Receiver
        </th>

        <th>
          Content
        </th>

        <th>
          Message sent
        </th>

      </tr>
      <% @list_of_messages.each do |a_message| %>
      <tr>
        <td>
          <%= a_message.sender.username %>
        </td>

        <td>
          <%= a_message.receiver.username %>
        </td>

        <td>
          <%= a_message.content %>
        </td>

        <td>
          <%= time_ago_in_words(a_message.created_at) %> ago
        </td>
      </tr>
      <%end%>
    </table>
    
    <hr>
  </div>
</div>
<hr>
